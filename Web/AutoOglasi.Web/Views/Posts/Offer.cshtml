@model AutoOglasi.Web.ViewModels.Posts.SinglePostViewModel

@{   ViewData["Title"] = $"{Model.Car.Make} {Model.Car.Model}"; }



<div class="row justify-content-evenly">
    <div class="col">
        <h5 class="mt-3 ms-3 text-white-50">  @Model.PublishedOn</h5>
    </div>
    <div class="col">
        <h1 class="text-center text-white">@this.ViewData["Title"]</h1>
    </div>
    <div class="col">
        <h4 class="text-info float-end me-4 mt-3">
            € @Model.Car.Price.ToString("N", CultureInfo.CurrentCulture).Replace(".00", string.Empty)
        </h4>
    </div>
</div>

<div class="justify-content-center">
    <hr class="border-info" />
    <div class="row">
        @* Description *@
        <div class="col-md-4 mt-3">

            <h4 class="mb-3 text-center text-white">Description</h4> @Model.Car.Description <hr class="my-3 border-info" />

            @* Car details *@
            <h4 class="mb-4 text-center text-white mt-3">Car details</h4>

            @* Model *@
            <h6 class="mt-3 text-white-50"> Model: <i> @Model.Car.Model</i></h6>

            @* Make: *@
            <h6 class="mt-3 text-white-50">Make: <i> @Model.Car.Make</i></h6>

            @* Transmission *@
            <h6 class="mt-3 text-white-50">Transmission: <i> @Model.Car.TransmissionType</i></h6>

            @* Year: *@
            <h6 class="mt-3 text-white-50">Year: <i>@Model.Car.Year</i></h6>

            @* Fuel type: *@
            <h6 class="mt-3 text-white-50">Fuel type: <i>@Model.Car.FuelType</i></h6>

            @* Horse power: *@
            <h6 class="mt-3 text-white-50">Horse power: <i>@(Model.Car.Horsepower)Hp</i></h6>

            @* Price: *@
            <h6 class="mt-3 text-white-50">Price: @Model.Car.Price.ToString("N", CultureInfo.CurrentCulture).Replace(".00", string.Empty)</h6>
            <hr class="border-info mt-lg-4 mb-3" />


            @*  Seller information  *@
            <div class="row mt-5 mb-3">
                <div class="col-md-12">
                    <div class="card shadow-info">
                        <h6 class="text-center text-white py-3"> Seller information:</h6>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-white-50"> <span class="text-info fas fa-user-alt"></span>&nbsp;&nbsp; @Model.SellerName</li>
                            <li class="list-group-item text-white-50"> <span class="text-info fas fa-phone-alt"></span> &nbsp;&nbsp; @Model.SellerPhoneNumber</li>
                            <li class="list-group-item text-white-50"><span class="text-info fas fa-map-marker-alt"></span>&nbsp;&nbsp; @Model.Car.LocationCity, @Model.Car.LocationCountry</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>


        @* Cover image *@
        <div class="col">
            <div class="row justify-content-evenly">
                <div id="carouselExampleAutoplaying" class="owlcarousel carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (var image in Model.Car.Images)
                        {
                            <div class="carousel-item active rounded ">
                                <a target="_blank" href="@image" width="600" height="400">
                                    <img src="@image" class="img-fluid img-thumbnail rounded-3 shadow" style="height: 30em; width: 100vw;" sizes="(min-width: 768px) 480px, 87.5vw" rel="preload" fetchpriority="high" alt="image" type="image/webp" />
                                </a>
                            </div>
                        }
                    </div>
                </div>



                @* Small images *@
                <div class="pb-0 mt-2 ">
                    <div class="row gy-3 row-cols-1 row-cols-sm-2 row-cols-md-3 ">
                        @foreach (var image in Model.Car.Images)
                        {
                            <img src="@image" class="imgInCarousel rounded-4 py-2" style="height:11em auto;" alt="gallery" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/owlcarousel/owl.carousel.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.owl-carousel').owlCarousel({
                lazyLoad: true,
                loop: true,
                response: true
            })
        });
    </script>
}

